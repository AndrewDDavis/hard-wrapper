{
    "name": "hard-wrapper",
    "displayName": "Hard-Wrapper",
    "description": "VS-Code plugin to hard-wrap paragraphs",
    "version": "0.0.3",
    "publisher": "andrewddavis",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/AndrewDDavis/hard-wrapper"
    },
    "activationEvents": [
        "onCommand:hardWrapper.wrap"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "hardWrapper.wrap",
            "title": "Hard Wrap"
        }],
        "configuration": {
            "title": "Paragraph Hard Wrapper",
            "properties": {
                "hardWrapper.defaultWrapColumn": {
                    "type": "number",
                    "default": 80,
                    "description": "Wrapping column if no rulers are set"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "vsce": "1.69.0"
    }
}
